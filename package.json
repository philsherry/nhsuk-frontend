{
  "name": "nhsuk-frontend",
  "version": "0.0.0",
  "description": "The NHS website frontend styles, for creating NHS websites and services.",
  "sasslintConfig": "config/sass-lint.yml",
  "scripts": {
    "prepare": "npm run build",
    "build": "gulp build && postcss packages/nhsuk.css -o packages/nhsuk.min.css.xxx",
    "start": "node app.js",
    "prewatch": "gulp build",
    "watch": "concurrently \"gulp\" \"nodemon app.js --config config/nodemon.json -q\"",
    "test": "npm run lint-css",
    "lint-css": "./node_modules/.bin/sass-lint -c ./config/.sass-lint.yml 'packages/**/*.scss' -v -q",
    "bundle": "npm run build & gulp bundle"
  },
  "dependencies": {
    "autoprefixer": "^9.1.5",
    "concurrently": "^4.0.1",
    "express": "^4.16.3",
    "nunjucks": "^3.1.3",
    "postcss": "^7.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "cssnano": "^4.1.4",
    "gulp": "^4.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-sass": "^4.0.1",
    "nodemon": "^1.18.4",
    "postcss-cli": "^6.0.0",
    "postcss-prefixer": "^2.1.0",
    "sass-lint": "^1.12.1",
    "sass-mq": "^4.0.2"
  },
  "engines": {
    "node": "8.11.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/nhsuk-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/nhsuk/nhsuk-frontend/issues"
  },
  "license": "MIT"
}
